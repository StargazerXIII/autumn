include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .welcome-section
        .section.person
          .container
            .header.header
              .header__logo
                .logo ВК
              .header__nav
                .nav.menu
                  - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы"]
                  ul.menu__list
                    each item in items
                      li.menu__item
                        a.menu__link #{item}
              .header_social
                .social.icons
                  - var icons = ["insta", "vk", "github"]
                  ul.social
                    each item in icons
                        li.social__item
                          a.social__link (href="")
                            +icon(item, "social__icon")
            .person__content
              .person-info
                .person-info__desc Личный сайт
                .person-info__name Вадим Кузнецов
            .person__scroll--btn
              a(href="#").scroll-down-btn Следующая страница
      //.maincontent
        +image('content/user.jpg', 'user-pic')
        +icon('link', 'link-class')
        .icon-bg


